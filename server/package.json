{
    "name": "server",
    "version": "1.0.0",
    "description": "Chitter app backend built with Express and Prisma.",
    "main": "app.ts",
    "type": "module",
    "scripts": {
        "reset:dev": "dotenv -e ../.env.development -r dotenv-expand/config -- npx prisma migrate reset",
        "migrate:dev": "dotenv -e ../.env.development -r dotenv-expand/config -- npx prisma migrate dev --name inititalise",
        "start:dev": "cross-env NODE_ENV=development nodemon src/app.ts",
        "build:prod": "tsc --project tsconfig.prod.json && npx prisma generate",
        "migrate:prod": "dotenv -e ../.env.production -r dotenv-expand/config -- npx prisma migrate deploy",
        "start:prod": "cross-env NODE_ENV=production node dist/src/app.js"
    },
    "license": "ISC",
    "devDependencies": {
        "@faker-js/faker": "^8.4.1",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/express-mysql-session": "^3.0.6",
        "@types/express-session": "^1.18.0",
        "@types/node": "^20.11.25",
        "@types/supertest": "^6.0.2",
        "nodemon": "^3.1.0",
        "prisma": "^6.11.1",
        "supertest": "^7.1.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.2",
        "vitest": "^3.2.4",
        "vitest-mock-extended": "^1.3.1"
    },
    "dependencies": {
        "@prisma/client": "^6.11.1",
        "@types/bcrypt": "^5.0.2",
        "bcrypt": "^6.0.0",
        "chitter": "file:..",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "cross-env": "^10.0.0",
        "dotenv": "^16.4.5",
        "express": "^4.18.3",
        "express-mysql-session": "^3.0.2",
        "express-session": "^1.18.0",
        "zod": "^3.25.67"
    }
}
